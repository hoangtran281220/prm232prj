<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.Activities.UploadAvatarActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical" android:padding="24dp">

        <TextView android:text="Upload Avatar"
            android:textSize="24sp" android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <ImageView android:id="@+id/avatarPreview"
            android:layout_width="150dp" android:layout_height="150dp"
            android:layout_marginTop="16dp" android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <Button android:id="@+id/btnChooseImage"
            android:text="Choose Image" android:layout_marginTop="20dp"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <Button android:id="@+id/btnUpload"
            android:text="Upload" android:layout_marginTop="12dp"
            android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>