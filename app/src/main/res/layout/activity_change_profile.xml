<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.Activities.ChangeProfileActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical" android:padding="24dp">

        <TextView android:text="Edit Personal Info"
            android:textSize="24sp" android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <EditText android:id="@+id/fullNameInput"
            android:hint="Full name" android:layout_marginTop="16dp"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <EditText android:id="@+id/phoneInput"
            android:hint="Phone number" android:layout_marginTop="12dp"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <Button android:id="@+id/btnSaveProfile"
            android:text="Save"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>